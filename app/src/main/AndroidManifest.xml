<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.wit.hikingtrails">

    <application
        android:name=".main.MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HikingTrails"
        android:usesCleartextTraffic="true"
        >
        <activity
            android:name=".views.map.HikeMapView"
            android:label="@string/title_activity_hike_maps"
            android:theme="@style/Theme.HikingTrails.NoActionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAoHkRdGbuPy8cDT_RA2pitUYjDm69TSL0" />

        <activity
            android:name=".views.location.EditLocationView"
            android:exported="false"
            android:label="@string/title_activity_map" />
        <activity
            android:name=".activities.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.hike.HikeView" />
        <activity android:name=".views.signIn.SignInView" />
        <activity android:name=".views.hikeList.HikeListView" />
        <activity android:name=".views.signUp.SignUpView" />
    </application>

</manifest>